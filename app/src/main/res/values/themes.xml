<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Ingridentify" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
    </style>

    <style name="Theme.Ingridentify" parent="Base.Theme.Ingridentify" />

    <style name="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Input">
        <item name="boxCornerRadiusTopStart">11dp</item>
        <item name="boxCornerRadiusTopEnd">11dp</item>
        <item name="boxCornerRadiusBottomStart">11dp</item>
        <item name="boxCornerRadiusBottomEnd">11dp</item>
    </style>

    <style name="Button">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">14dp</item>
        <item name="strokeColor">?colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:backgroundTint">?colorPrimary</item>
    </style>

    <style name="Button.Outlined">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:backgroundTint">?android:colorBackground</item>
        <item name="rippleColor">?colorPrimaryVariant</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">gone</item>
        <item name="trackThickness">2dp</item>
        <item name="indicatorSize">24dp</item>
        <item name="indicatorColor">?colorOnSecondary</item>
    </style>
</resources>